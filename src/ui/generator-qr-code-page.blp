using Gtk 4.0;

template $GeneratorQRCodePage: Box {
  orientation: vertical;
  spacing: 12;
  halign: center;
  valign: center;
  hexpand: true;
  vexpand: true;

  Picture qr_picture {
    width-request: 192;
    height-request: 192;
    content-fit: contain;
  }

  Box {
    orientation: vertical;
    spacing: 6;
    hexpand: true;
    halign: fill;

    Label {
      label: _("Original text");
      wrap: true;
      xalign: 0.0;
    }

    ScrolledWindow {
      min-content-height: 40;
      max-content-height: 160;
      hexpand: true;
      vexpand: false;

      child: TextView original_text_view {
        editable: false;
        cursor-visible: false;
        focusable: false;
        wrap-mode: word_char;
        hexpand: true;
        vexpand: false;
        top-margin: 6;
        bottom-margin: 6;
        left-margin: 0;
        right-margin: 0;
      };
    }
  }

  Box {
    orientation: horizontal;
    spacing: 6;
    halign: center;

    Button btn_download {
      icon-name: "document-save-symbolic";
      tooltip-text: _("Save QR Code");
      clicked => $on_btn_download_clicked();
    }

    Button btn_copy {
      icon-name: "edit-copy-symbolic";
      tooltip-text: _("Copy to Clipboard");
      clicked => $on_btn_copy_clicked();
    }

    Button btn_new {
      label: _("New");
      clicked => $on_btn_new_clicked();
    }
  }
}
